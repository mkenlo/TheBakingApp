<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_step_id"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingVertical="@dimen/medium_spacing"
        android:paddingLeft="@dimen/medium_spacing"
        android:paddingRight="@dimen/small_spacing"
        android:text="17."/>

    <TextView
        android:id="@+id/tv_step_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="@dimen/small_spacing"
        android:paddingRight="@dimen/medium_spacing"
        android:paddingVertical="@dimen/medium_spacing"
        android:text="@string/dummy_large_text" />

</LinearLayout>